{
  "tabWidth": 2,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": "*.ejs",
      "options": {
        "parser": "html",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "semi": false,
        "singleQuote": false
      }
    }
  ]
}
