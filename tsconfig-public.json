{
  "include": [
    "./src/public/js/**/*.ts",
    "./tsconfig-public.json"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "watch": true,
    "target": "ES6",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "Classic",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "strict": false,
    "removeComments": true,
    "experimentalDecorators": false,
    "typeRoots": [],
    "lib": [
      "DOM",
      "ESNext",
      "ES2015",
      "ES2016"
    ]
  }
}
