{
  "include": [
    "**/*.ts",
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "allowJs": false,
    "target": "ES6",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "strict": false,
    "removeComments": false,
    "experimentalDecorators": true
  }
}
