{
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./src/public"
  ],
  "compilerOptions": {
    "declaration": true,
    "allowJs": false,
    "target": "ES6",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "strict": false,
    "removeComments": false,
    "experimentalDecorators": true,

    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
