    <%- include("../partials/nav_modern.ejs", { global, transparent: true, transparent_height: -1 }) %> 

    <div class="landing-header">
      <div class="tabs">
        <div class="left">
          <a href="/news" class="tab"><%= global.lang.menu.updates %></a>
          <a href="/shop" class="tab"><%= global.lang.menu.shop.title %></a>
        </div>
        <div class="logo">
          <img src="/img/logo-128x.png" alt="Nasgar Network">
        </div>
        <div class="right">
          <a href="/bans" class="tab"><%= global.lang.menu.bans %></a>
          <a href="/vote" class="tab"><%= global.lang.menu.vote %></a>
        </div>
      </div>
    </div>

    <div class="desktop-login">
      <% if (global.user !== null) { %>
        <div class="tabs">
          <div class="tab login">
            <div class="title"><i class="material">account_circle</i> <%= global.user.name %></div>
            <div class="options">
              <a href="/profile" class="option"><i class="material">person</i> <span>Profile</span></a>
              <% if (global.user.rank >= global.const.LEVEL.Staff) { %>
                <a href="/staff" class="option"><i class="material">admin_panel_settings</i> <span>Staff</span></a>
              <% } %>  
              <a href="/settings" class="option"><i class="material">settings</i> <span>Settings</span></a>
              <a href="/logout" class="option"><i class="material">logout</i> <span>Log Out</span></a>
            </div>
          </div>
        </div>
      <% } else { %>
        <a href="/login" class="tab login"><%= global.lang.menu.login %></a>
      <% } %>
    </div>

    <div class="landing">
      <div class="ip" title="Copy" onclick="globalThis.copyToClipboard('nasgar.online')">
        nasgar.online
      </div>
      <div class="desc">
        <span><%- global.lang.landing.description %></span>
        <span>1.7 - 1.17.x</span>
      </div>
      <div class="discord">
        <img
          src="/img/discord-logo.svg"
          alt="Discord Icon"
          title="Go to Nasgar Discord"
          onclick="globalThis.open('https://ds.nasgar.online', '_blank')"
        />
      </div>
    </div>

